<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:background="@color/teal_200"
        android:padding="10dp">



        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utilizator"
            android:textColor="#FBFBFB"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_user_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="172dp"
            android:layout_marginRight="172dp"
            android:text="Numar de telefon"
            android:textColor="#FBFBFB"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total comanda"
            android:textColor="#FBFBFB"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/order_phone_number"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="25dp"

            />

        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresa , Oras"
            android:textColor="#FBFBFB"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/order_total_price"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data si ora"
            android:textColor="#FBFBFB"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/order_address_city"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"

            />

        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date_time"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="#FAFAFA"
            android:text="Vezi produsele din comanda"
            android:textSize="19dp"
            android:textAllCaps="false"


            />


    </RelativeLayout>

</RelativeLayout>